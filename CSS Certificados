/* Estilo para el botón regresar */
.regresar-button {
  background-color: transparent; /* Fondo transparente */
  color: #ffffff; /* Texto blanco */
  padding: 0.5rem 2rem; /* Ajusta el padding alrededor del emoji y el texto */
  font-size: 1.5rem; /* Tamaño de la fuente para el texto */
  border: none; /* Elimina el borde */
  border-radius: 20px; /* Redondeado para el botón */
  display: flex;
  flex-direction: column; /* Coloca el emoji encima del texto */
  justify-content: center; /* Centra el contenido verticalmente */
  align-items: center; /* Centra el contenido horizontalmente */
  gap: 0.5rem; /* Espacio entre el emoji y el texto */
  cursor: pointer; /* Cambia el cursor a manito cuando se pasa el mouse sobre el botón */
  transition: transform 0.3s ease, box-shadow 0.3s ease;
  margin: 0 auto; /* Centrado */
}

.regresar-button .emoji {
  font-size: 3rem; /* Tamaño grande del emoji */
}

.regresar-button:hover {
  transform: translateY(-6px); /* Efecto de elevación */
}

/* Ajustes para pantallas más pequeñas */
@media (max-width: 768px) {
  .regresar-button {
    font-size: 1rem; /* Ajuste del tamaño de fuente */
    padding: 0.8rem 1.5rem; /* Ajuste del padding */
  }

  .regresar-button .emoji {
    font-size: 2.5rem; /* Ajuste del tamaño del emoji */
  }
}
